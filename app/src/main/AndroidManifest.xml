<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.nitf.umimamoru">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.InfoDisplayActivity"
            android:label="@string/title_activity_info_display"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".RowItem"
            android:label="@string/title_activity_row_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activity.SelectRegionActivity"
            android:label="@string/title_activity_select_region"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>